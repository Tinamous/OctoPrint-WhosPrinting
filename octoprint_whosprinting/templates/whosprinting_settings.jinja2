<form class="form-horizontal">
    <div class="control-group col-xs-4">
        <label class="control-label">RfidComPort</label>
        <div class="controls">
		<div class="input-append">
			<select data-bind="options: settings.plugins.whosprinting.commPorts, value: settings.plugins.whosprinting.rfidComPort" >
			</select>
		</div>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Fire PrintStarted Event</label>
        <div class="controls">
		<div class="input-append">
			<input type="checkbox" class="input-block-level" data-bind="value: settings.plugins.whosprinting.raisePrintStartedOnRfidSwipe">
		</div>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Email cc's</label>
        <div class="controls">
		<div class="input-append">
			<input type="checkbox" class="input-block-level" data-bind="value: settings.plugins.whosprinting.emailcc">
		</div>
        </div>
    </div>
</form>